#Description:
# My own tool to easily control VM's from the CLI

printf "Please enter the name of the VM you want to run\n\n"

# Outputs installed VM names
# VBoxManage list vms | cut -d '"' -f2 > ./vmlist.tmp
# VBoxManage list vms | cut -d '"' -f2

vm1=$(sed '1!d' ./vmlist.tmp)
vm2=$(sed '2!d' ./vmlist.tmp)
vm3=$(sed '3!d' ./vmlist.tmp)

echo "$vm1"
echo "$vm2"
echo "$vm3"

echo -e ./vmlist.tmp

