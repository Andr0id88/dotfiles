#Description:
# testing out tmux layout
alias tmux='TERM=screen-256color tmux'

tmux new-session -d -s mysess -n text -c 'vim'
tmux split-window -h -p 30 mysess:text -c 'htop'
tmux split-window -h
tmux send-keys '~/myRepos/Infoskjerm/piChecker.py' 'Enter'
tmux split-window -v
tmux send-keys 'tmux clock-mode' 'Enter'
tmux new-window -d -a -t mysess:text-to-file -n monitor 'top'
tmux a -t mysess
