#!/bin/sh
# tmux script that gives a layout for work development and a python script using ansible to control multiple infoscreens.


tmux='TERM=screen-256color tmux'

tmux new-session -d -s mysession -n windowtext -c 'top'
tmux new-window -d -a -t mysession:text-to-file -n monitor 'top'

