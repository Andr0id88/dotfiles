#Description:
# Push all git repos from my git repo folders and my dotfiles bare repo

# Location of all my github projects
mygit=$HOME/github/myrepos

# Super ugly but it is needed to look for new untracked files in these locations or after a fresh install using larbs
/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME add ~/.config/getkeys/* ~/.config/htop ~/.config/i3/config ~/.config/i3blocks/config ~/.config/mpd/mpd.conf ~/.config/mpv/input.conf ~/.config/nvim/init.vim ~/.config/nvim/UltiSnips/* ~/.config/ranger/* ~/.config/surfraw/* ~/.config/vifm/* ~/.config/zathura/zathurarc ~/.config/aliasrc ~/.config/bmdirs ~/.config/bmdirs ~/.config/shortcutrc ~/.local/bin/* ~/.bash_profile ~/.bashrc ~/.inputrc ~/.profile ~/.tmux.conf ~/.vimrc ~/.xinitrc ~/.zprofile ~/.config/sxhkd/sxhkdrc ~/.config/dunst/dunstrc ~/.config/sxiv/"exec"/key-handler ~/.config/newsboat/config ~/.config/newsboat/urls ~/.config/mimeapps.list

# My dotfile alias to my git bare repo
dotfiles="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"


# Function to run on all my dotfiles
dcp() {
    $dotfiles add -u
    $dotfiles commit -a -m "Uploaded by script, no commit msg added"
    $dotfiles push
}


# Find all git repo folders and run git add + git commit + git push on them
find "$mygit" -name ".git" -type d -exec bash -c "echo '{}' && cd '{}'/.. && (git add . && git commit -a -m "Uploaded by script, no commit msg" && git push)" \;


# Upload all my new dotfiles to github
dcp
